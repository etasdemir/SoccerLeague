<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/teamsFragment">

    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.elacqua.soccerleague.ui.teams.TeamsFragment"
        android:label="TeamsFragment">
        <action
            android:id="@+id/action_teamsFragment_to_fixtureFragment"
            app:destination="@id/fixtureFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/fixtureFragment"
        android:name="com.elacqua.soccerleague.ui.fixture.FixtureFragment"
        android:label="FixtureFragment" />
</navigation>